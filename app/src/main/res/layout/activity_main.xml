<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="70dp">

        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/gray02"
            android:textSize="40dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="end"
            android:fontFamily="sans-serif-light"
            android:paddingTop="20dp"
            android:id="@+id/tv_left"
            android:layout_height="70dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/green2"
            android:layout_marginHorizontal="20dp"
            android:textSize="40dp"
            android:gravity="end"
            android:fontFamily="sans-serif-light"
            android:paddingTop="20dp"
            android:id="@+id/tv_between"
            android:layout_height="70dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/gray02"
            android:layout_marginHorizontal="20dp"
            android:textSize="40dp"
            android:gravity="end"
            android:fontFamily="sans-serif-light"
            android:paddingTop="20dp"
            android:id="@+id/tv_right"
            android:layout_height="70dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/green2"
            android:layout_marginHorizontal="20dp"
            android:textSize="40dp"
            android:gravity="end"
            android:fontFamily="sans-serif-light"
            android:paddingTop="20dp"
            android:id="@+id/tv_calc"
            android:layout_height="70dp"/>



    </FrameLayout>

    <TextView
        android:id="@+id/tv_showCalc"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="sans-serif-light"
        android:gravity="end"
        android:padding="10dp"
        android:paddingHorizontal="10dp"
        android:text=""
        android:textColor="@color/gray01"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="600dp">
        <TableRow android:layout_width="match_parent"
            android:layout_marginTop="27dp"
            android:padding="5dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/dongho"
                android:id="@+id/iv_dongho"
                android:layout_marginStart="25dp"
                android:padding="4dp"
                android:background="@drawable/bg_cricletool"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/thucke"
                android:id="@+id/iv_thucke"
                android:rotation="45"
                android:layout_marginStart="10dp"
                android:padding="4dp"
                android:background="@drawable/bg_cricletool"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/bangtinh"
                android:id="@+id/iv_bangtinh"
                android:layout_marginStart="10dp"
                android:padding="1dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/backspace"
                android:background="@drawable/bg_cricletool"
                android:id="@+id/iv_backspace"
                android:layout_marginStart="120dp"
                android:padding="6dp"
                android:layout_height="match_parent"
                Android:tint="@color/green" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/line"
            android:layout_height="15dp"/>

        <TableRow android:layout_height="82dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_width="match_parent">
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:text="C"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/red"
                android:textSize="30dp"
                android:id="@+id/bt_Clear"
                android:gravity="center"
                android:layout_width="77dp"/>
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:layout_marginStart="8dp"
                android:text="( )"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/green"
                android:textSize="28dp"
                android:id="@+id/bt_ngoackep"
                android:gravity="center"
                android:layout_width="77dp"/>
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:text="%"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/green"
                android:textSize="35dp"
                android:id="@+id/bt_percent"
                android:gravity="center"
                android:layout_width="77dp"/>

            <Button android:layout_width="77dp"
                android:background="@drawable/bg_cricle"
                android:text="รท"
                android:textColor="@color/green"
                android:contentDescription="/"
                android:textSize="40dp"
                android:layout_marginStart="8dp"
                android:id="@+id/btDiv"
                android:layout_height="77dp"/>

        </TableRow>
        <TableRow android:layout_height="82dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent">
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:text="7"
                android:contentDescription="7"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:id="@+id/bt_7"
                android:gravity="center"
                android:layout_width="77dp"/>
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:layout_marginStart="8dp"
                android:text="8"
                android:contentDescription="8"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:id="@+id/bt_8"
                android:gravity="center"
                android:layout_width="77dp"/>
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:text="9"
                android:contentDescription="9"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:id="@+id/bt_9"
                android:gravity="center"
                android:layout_width="77dp"/>
                <Button android:layout_height="77dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_cricle"
                    android:text="ร"
                    android:textColor="@color/green"
                    android:textSize="40dp"
                    android:contentDescription="x"
                    android:id="@+id/btMulti"
                    android:layout_width="77dp"/>
        </TableRow>
        <TableRow android:layout_height="82dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent">
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:text="4"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:contentDescription="4"
                android:id="@+id/bt_4"
                android:gravity="center"
                android:layout_width="77dp"/>
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:layout_marginStart="8dp"
                android:text="5"
                android:contentDescription="5"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:id="@+id/bt_5"
                android:gravity="center"
                android:layout_width="77dp"/>

            <Button
                android:id="@+id/bt_6"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_cricle"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="6"
                android:contentDescription="6"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:textStyle="bold" />
        <Button android:layout_width="77dp"
            android:layout_height="77dp"
            android:id="@+id/btSub"
            android:contentDescription="-"
            android:text="-"
            android:layout_marginStart="8dp"
            android:textSize="43dp"
            android:textColor="@color/green"
            android:background="@drawable/bg_cricle"/>

        </TableRow>
        <TableRow android:layout_height="82dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent">
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:text="1"
                android:contentDescription="1"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:id="@+id/bt_1"
                android:gravity="center"
                android:layout_width="77dp"/>

            <Button
                android:id="@+id/bt_2"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="8dp"
                android:contentDescription="2"
                android:background="@drawable/bg_cricle"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:text="3"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:contentDescription="3"
                android:id="@+id/bt_3"
                android:gravity="center"
                android:layout_width="77dp"/>
                <Button android:layout_marginStart="8dp"
                    android:id="@+id/bt_Plus"
                    android:text="+"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:background="@drawable/bg_cricle"
                    android:contentDescription="+"
                    android:textColor="@color/green"
                    android:textSize="40dp"/>

        </TableRow>
        <TableRow android:layout_height="82dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent">
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:text="+/-"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:id="@+id/bt_opstion"
                android:gravity="center"
                android:layout_width="77dp"/>
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:layout_marginStart="8dp"
                android:text="0"
                android:contentDescription="0"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:id="@+id/bt_0"
                android:gravity="center"
                android:layout_width="77dp"/>
            <Button android:layout_height="77dp"
                android:background="@drawable/bg_cricle"
                android:text="."
                android:textStyle="bold"
                android:contentDescription="."
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray02"
                android:textSize="30dp"
                android:id="@+id/bt_dot"
                android:gravity="center"
                android:layout_width="77dp"/>
                <Button android:layout_height="77dp"
                    android:layout_width="77dp"
                    android:text="="
                    android:layout_marginStart="8dp"
                    android:contentDescription="="
                    android:textStyle="bold"
                    android:id="@+id/btEqual"
                   android:textColor="@color/white"
                    android:background="@drawable/bg_cricle"
                    android:backgroundTint="@color/green"
                    android:textSize="40dp"/>
        </TableRow>

    </LinearLayout>


</LinearLayout>